# Domain name for Haru
PHX_HOST=haru.yourdomain.com

# Secret key base (generate with: mix phx.gen.secret)
SECRET_KEY_BASE=your_secret_key_base

# Database credentials
DB_USER=postgres
DB_PASSWORD=secure_password_here
DB_NAME=haru_prod

# Traefik network name (check with 'docker network ls')
# Defaulting to 'public' as it's common for Traefik setups
TRAEFIK_NETWORK=public
