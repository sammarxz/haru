<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />

    <%!-- Social Sharing (Open Graph / Facebook) --%>
    <meta property="og:type" content="website" />
    <meta property="og:url" content={HaruWebWeb.Endpoint.url() <> ~p"/"} />
    <meta property="og:title" content="Haru · Simple & Private Analytics" />
    <meta
      property="og:description"
      content="Privacy-friendly website analytics. No cookies, no consent banners, just pure performance."
    />
    <meta property="og:image" content={HaruWebWeb.Endpoint.url() <> ~p"/images/social.png"} />

    <%!-- Twitter Card --%>
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={HaruWebWeb.Endpoint.url() <> ~p"/"} />
    <meta name="twitter:title" content="Haru · Simple & Private Analytics" />
    <meta
      name="twitter:description"
      content="Privacy-friendly website analytics. No cookies, no consent banners, just pure performance."
    />
    <meta name="twitter:image" content={HaruWebWeb.Endpoint.url() <> ~p"/images/social.png"} />

    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="alternate icon" href="/favicon.ico" />
    <.live_title default="Haru" suffix=" · Haru">
      {assigns[:page_title]}
    </.live_title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,400;0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
    <script
      defer
      src="https://haru.marxz.me/js/haru.js"
      data-token="VmY5JXs0_BZYKnsrBhykjrcVmlhLlITUZZ2FQx7C6PI"
      data-api="https://haru.marxz.me"
    >
    </script>
  </head>
  <body class="bg-surface-card text-text-primary antialiased">
    {@inner_content}
  </body>
</html>
